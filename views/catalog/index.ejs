<nav>
    <div>
        <h3>Handy Furny</h3>
    </div>
    <div class="nav-search">
        <input class"search-furny-value" id="search-furny-value" type="text" placeholder="Type of furny">
        <input class="btn-search" id="search-furny-submit" type="submit" value="Search">
    </div>
    <div id="nav-icon" class="nav-icon">
        <i class="fas fa-align-justify"></i>
    </div>
    <div class="nav-li">
        <ul>
            <li class="active"><a href="/catalog">Home</a></li>
            <li><a href="/logout">Log Out</a></li>
            <li><a href="/catalog/new">New Product</a></li>
            <li><a href="/catalog/list">All Products</a> </li>
            <li><a href="/user/<%=user._id%>">Profile</a> </li>
        </ul>
    </div>
</nav>
<div class="container-catalog">
    <div class="catalog">
        <section>
            <div>
                <h1 class="main-title">Discover the people who are selling furniture</h1>
            </div>
            
            <div>
                <div class="nav-map">
                    <form action="" method="post">
                        <input id="search-box" type="text" name="where" placeholder="Search by zone">
                    </form>
                </div>
                <div id="map"></div>
            </div>
        </section>
        <section>
                <h2>Latest furnies added</h2>
                <% if (items.length >= 3 ) { %>  
                <%  for (var i = 0; i < 3; i++) {%> 
                <div class="new-items-card">
                    <div class="item-image-box">
                        <img class="item-image" src="<%= items[i].itemPic %>">
                    </div>
                    <div class="item-info-box">
                        <a class="title" href="/catalog/<%= items[i]._id %>">
                        <h2><%= items[i].title %></h2>
                        </a>
                        <p class="item-category"><%= items[i].category %></p>
                
                        <img class="user-profile-pic" src="<%= items[i]._creator.profilePic %>">
                        
                        <a href="/user/<%= items[i]._creator._id %>"><%= items[i]._creator.username %></a>
                        
                    </div>  
                </div>
                <% } %>
                <% } else {%>
                
                    <%  items.forEach( item => {%> 
                    <div class="new-items-card">
                        <div class="item-image-box">
                            <img class="item-image" src="<%= item.itemPic %>">
                        </div>
                        <div class="item-info-box">
                            <a class="title" href="/catalog/<%= item._id %>">
                            <strong><%= item.title %></strong>
                            </a>
                            <p class="item-category"><%= item.category %></p>
                            <div class="item-user-info">
                                <img class="user-profile-pic" src="<%= item._creator.profilePic %>">
                            
                                <a href="/user/<%= item._creator._id %>"><%= item._creator.username %></a>
                            </div>
                        </div>  
                    </div>
                    <%})%> 
                <%} %>  
    
        </section> 
        
    </div>
</div>
    <div>
        <section class="search-furny">
            
        </section>
        <section id="result-search-furny">
            
        </section>
    </div>

