<nav>
    <div>
        <h3>Handy Furny</h3>
    </div>
    <div class="nav-li">
        <ul>
            <li><a href="/catalog">Home</a></li>
            <li><a href="/logout">Log Out</a></li>
            <li><a href="/catalog/new">New Product</a></li>
            <li class="active"><a href="/catalog/list">All Products</a> </li>
            <li><a href="/user/<%=user._id%>">Profile</a> </li>
        </ul>
    </div>
</nav>

<div class="container background">
    <h1>All Products</h1>
    <div class="list-products">
    <% items.forEach((item) => { %>

      
          <div class="furny-info">
            <div>
              <img class="resize item-image" src="<%= item.itemPic %>">
            </div>
            <div>
                <a class="title" href="/catalog/<%= item._id %>">
              <strong><%= item.title %></strong>
              </a>
              <p class="item-category">  <i> <%= item.category %></i></p>
              <div class="price"><b>$ <%= item.price %>.00</b></div>
              <div class="creator-info">
              <span>
                <img class="user-profile-pic" src="<%= item._creator.profilePic %>">
                <br>
                <a class="user-profile" href="/user/<%=item._creator._id%>">
                <strong><%= item._creator.username %></strong>
                </a>
              </span>
              </div>
            </div>
          </div>
          <% }) %>
      
    </div>
</div>

