


  <div class="login">
    <form action="/signup" method="POST" id="form-container">
        <label for="username">Username</label>
        <input class="login-input"id="username" type="text" name="username" placeholder="JonSnow" required>
        <br><br>
        <label for="email">Email</label>
        <input class="login-input" type="text" name="email" class="form-control" required>
        <br><br>
        <label for="password">Password</label>
        <input class="login-input" id="password" type="password" name="password" placeholder="Your password" required>
    
        <% if (typeof message !== "undefined") { %>
        <div class="error-message"><%= message %></div>
        <% } %>
        <br><br>
    
        <button class="btn btn-primary btn-block btn-large">Create account</button>
    
        <p class="account-message">
            Do you already have an account?
            <a href="/login">Login</a>
        </p>
    </form>



  </div>


