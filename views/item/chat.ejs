   <div class="chat-form">
    
      <ul id="messages">
        <% if (doc!=undefined){%>
           <% doc.messages.forEach(m=>{%>
             <li><%=m%></li>
           <%})%>
        
        <%}else {%>
          <li></li>
          <%}%>
      </ul>
      <form class="form-chat"action="">
        <input class="form-chat-input"id="m" autocomplete="off" /><button class="form-chat-button">Send</button>
      </form>
    
    
  </div>




</section>


  

