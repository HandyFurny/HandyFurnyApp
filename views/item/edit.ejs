<section class="new">
    <div class="new-item-container">
        <h2>Edit your furny info</h2>
          <form action="/catalog/<%= item._id %>" method="post"  enctype="multipart/form-data">
            <div>
              <label>Category</label>
              <select class="new-item-select"name="category" id="category">
                <% types.forEach((category) => { %>
                  <option type="text" value="<%= category %>"><%= category %></option>
                <%  }) %>
              </select>
            </div>
            <div>
             
              <input class="new-item-form input-width " placeholder="What are you selling?"type="text" name="title" value="<%=item.title%>" required>
            </div>
            <div>
          
              <input type="textarea" class ="new-item-form input-width textarea"  placeholder="Describe your item shortly and catchy." name="description" value="<%=item.description%>" required></input>
            </div>
            <div class="img-and-price">
              <input class ="new-item-form price"  " placeholder="Maybe a lower?" type="number" name="price" value="<%=item.price%>" required>
              <img class="user-profile-pic-edit"src="<%=item.itemPic%>" alt="old pic">
            </div>
            <h3>Change photo of your furny!</h3>
              <input value="<%=item.itemPic%>" class ="new-item-form nput-width" type="file" name="itemPic" required>
            <div>
              <button class="new-item-form input-width green" type="submit">Update Product</button>
            </div>
          </form>
      </div>




  
</section>
